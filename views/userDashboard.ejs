<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
            margin: 0;
        }
        
        .menu {
            display: flex;
            flex-direction: column;
            gap: 15px;
            background: white;
            padding: 20px 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .menu button {
            font-size: 16px;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            background: none;
            cursor: pointer;
            transition: 0.3s ease-in-out;
            background-color: #0a48a86e;
        }

        .menu button:hover {
            background-color: #007bff;
            color: white;
        }

        .hidden { display: none; }

        .input-form {
            margin-top: 10px;
            text-align: center;
        }

        input {
            padding: 8px;
            width: 80%;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .action-btn {
            margin-top: 10px;
            padding: 8px 15px;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .add-btn { background-color: #28a745; }
        .add-btn:hover { background-color: #218838; }

        .join-btn { background-color: #ff9800; }
        .join-btn:hover { background-color: #e68900; }

        .mySpaces {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    padding: 20px;
}

.space-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: 300px;
    text-align: center;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.space-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.admin-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #ff5e00;
    color: white;
    font-size: 10px;
    font-weight: bold;
    padding: 5px 8px;
    border-radius: 5px;
    text-transform: uppercase;
}

.space-name {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    margin-bottom: 8px;
}

.stats {
    font-size: 12px;
    color: #666;
    margin-top: 8px;
}

.btn {
    display: inline-block;
    margin-top: 12px;
    padding: 10px 14px;
    background: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-size: 14px;
    transition: background 0.3s ease;
}

.btn:hover {
    background: #0056b3;
}
    </style>
</head>
<body>
    <div class="menu">
        <button onclick="toggleForm('spaceForm')">Create Your Space</button>
        <button onclick="toggleForm('joinForm')">Join a New Space</button>

        <div id="spaceForm" class="input-form hidden">
            <input type="text" id="spaceName" placeholder="Enter Space Name">
            <button class="action-btn add-btn" onclick="submitForm('/create-space', 'spaceName', 'spaceForm')">Add</button>
        </div>

        <div id="joinForm" class="input-form hidden">
            <input type="text" id="spaceCode" placeholder="Enter Space Code">
            <button class="action-btn join-btn" onclick="submitForm('/join-space', 'spaceCode', 'joinForm')">Join</button>
        </div>
    </div>

    <div class="mySpaces">
        <% mySpaces.forEach(function(space) { %>
            <div class="space-card">
                <% if (space.admin.toString() === user._id.toString()) { %>  
                    <span class="admin-badge">Admin</span>
                <% } %>
                <div class="space-name"><%= space.spaceName %></div>
                <div class="stats">üë• <%= space.members ? space.members.length : 0 %> Members | ‚è≥ <%= space.pendingRequests.length %> Pending Requests</div>
                <a href="/spaces/<%= space._id %>/space-dashboard" class="btn">Go to Space</a>
            </div>
        <% }); %>
    </div>
    
    <div class="mySpaces">
        <% joinedSpaces.forEach(function(space) { %>
            <div class="space-card">
                <div class="space-name"><%= space.spaceName %></div>
                <div class="stats">üë• <%= space.members ? space.members.length : 0 %> Members</div>
                <a href="/spaces/<%= space._id %>" class="btn">Go to Space</a>
            </div>
        <% }); %>
    </div>

    

    <script>
        function toggleForm(formId) {
            document.getElementById('spaceForm').classList.add('hidden');
            document.getElementById('joinForm').classList.add('hidden');
            document.getElementById(formId).classList.remove('hidden');
        }

        async function submitForm(url, inputId, formId) {
            let inputValue = document.getElementById(inputId).value.trim();
            if (!inputValue) return alert("Please enter a value!");

            try {
                let response = await fetch(url, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ [inputId]: inputValue })
                });
                
                let result = await response.json();
                alert(result.message);
                document.getElementById(inputId).value = "";
                document.getElementById(formId).classList.add("hidden");
            } catch (error) {
                alert("Error: " + error.message);
            }
        }
    </script>
</body>
</html>
