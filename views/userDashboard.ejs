<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
      /* General Styles */
body {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background: linear-gradient(135deg, #0a48a8, #007bff);
    font-family: "Poppins", sans-serif;
    margin: 0;
    color: white;
}

/* Callout Section */
.callout {
    text-align: center;
    margin-bottom: 20px;
}

.callout h1 {
    font-size: 28px;
    font-weight: bold;
}

.callout p {
    font-size: 18px;
    opacity: 0.8;
}

/* Menu Styles */
.menu {
    display: flex;
    flex-direction: column;
    gap: 15px;
    background: white;
    padding: 25px 40px;
    border-radius: 12px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    text-align: center;
    color: black;
}

.menu button {
    font-size: 16px;
    font-weight: bold;
    padding: 12px 22px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    transition: 0.3s ease-in-out;
    background: #0a48a8;
    color: white;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
}

.menu button:hover {
    background: #0056b3;
}

/* Input Form */
.input-form {
    margin-top: 15px;
    text-align: center;
}

.input-form input {
    padding: 10px;
    width: 90%;
    border: 2px solid #ddd;
    border-radius: 6px;
    font-size: 14px;
}

.action-btn {
    margin-top: 12px;
    padding: 10px 18px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    cursor: pointer;
    transition: 0.3s ease-in-out;
    color: white;
}

.add-btn {
    background-color: #28a745;
}

.add-btn:hover {
    background-color: #218838;
}

.join-btn {
    background-color: #ff9800;
}

.join-btn:hover {
    background-color: #e68900;
}

/* Spaces Section */
.mySpaces {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    padding: 20px;
    width: 100%;
    max-width: 1000px;
}

/* Space Card */
.space-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    padding: 25px;
    width: 280px;
    text-align: center;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.space-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.admin-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #ff5e00;
    color: white;
    font-size: 10px;
    font-weight: bold;
    padding: 6px 10px;
    border-radius: 5px;
    text-transform: uppercase;
}

.space-name {
    font-size: 20px;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
}

.stats {
    font-size: 14px;
    color: #666;
    margin-top: 10px;
}

/* Button */
.btn {
    display: inline-block;
    margin-top: 15px;
    padding: 12px 18px;
    background: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-size: 14px;
    transition: background 0.3s ease-in-out;
}

.btn:hover {
    background: #0056b3;
}

/* Hide Elements */
.hidden {
    display: none;
}

    </style>
</head>
<body>
    <div class="callout">
        <h1>Hello, <%= user. nickname %></h1>
        <p>Define your AURA </p>
        <br>
    </div>
    <div class="menu">
        <button onclick="toggleForm('spaceForm')">Create Your Space</button>
        <button onclick="toggleForm('joinForm')">Join a New Space</button>

        <div id="spaceForm" class="input-form hidden">
            <input type="text" id="spaceName" placeholder="Enter Space Name">
            <button class="action-btn add-btn" onclick="submitForm('/create-space', 'spaceName', 'spaceForm')">Add</button>
        </div>

        <div id="joinForm" class="input-form hidden">
            <input type="text" id="spaceCode" placeholder="Enter Space Code">
            <button class="action-btn join-btn" onclick="submitForm('/join-space', 'spaceCode', 'joinForm')">Join</button>
        </div>
    </div>
    <div class="mySpaces">
        <% mySpaces.forEach(function(space) { %>
            <div class="space-card">
                <% if (space.admin.toString() === user._id.toString()) { %>  
                    <span class="admin-badge">Admin</span>
                <% } %>
                <div class="space-name"><%= space.spaceName %></div>
                <div class="stats">üë• <%= space.members ? space.members.length : 0 %> Members | ‚è≥ <%= space.pendingRequests.length %> Pending Requests</div>
                <a href="/spaces/<%= space._id %>/space-dashboard" class="btn">Go to Space</a>
            </div>
        <% }); %>
    </div>
    
    <div class="mySpaces">
        <% joinedSpaces.forEach(function(space) { %>
            <div class="space-card">
                <div class="space-name"><%= space.spaceName %></div>
                <div class="stats">üë• <%= space.members ? space.members.length : 0 %> Members</div>
                <a href="/spaces/<%= space._id %>/space-dashboard" class="btn">Go to Space</a>
            </div>
        <% }); %>
    </div>

    

    <script>
        function toggleForm(formId) {
            document.getElementById('spaceForm').classList.add('hidden');
            document.getElementById('joinForm').classList.add('hidden');
            document.getElementById(formId).classList.remove('hidden');
        }

        async function submitForm(url, inputId, formId) {
            let inputValue = document.getElementById(inputId).value.trim();
            if (!inputValue) return alert("Please enter a value!");

            try {
                let response = await fetch(url, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ [inputId]: inputValue })
                });
                
                let result = await response.json();
                alert(result.message);
                document.getElementById(inputId).value = "";
                document.getElementById(formId).classList.add("hidden");
            } catch (error) {
                alert("Error: " + error.message);
            }
        }
    </script>
</body>
</html>
